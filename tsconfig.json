{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "outDir": "./dist/",
    "pretty": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist/node_modules"
  ],
  "typeRoots": [
    "node_modules/@types"
    ]
}
